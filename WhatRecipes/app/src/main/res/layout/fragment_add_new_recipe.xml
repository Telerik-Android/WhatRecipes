<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_name_header"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/recipeTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_recipe_name"
            android:inputType="text"
            android:maxLength="25"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_summary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/recipeTextSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/recipe_quick_summary"
            android:inputType="textMultiLine"
            android:textAppearance="@style/RecipeSummaryFont" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_ingredients"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <!-- LinearLayout holder for dynamically adding of Ingredient fields -->
        <LinearLayout
            android:id="@+id/ingredient_framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <!-- End of LinearLayout holder for Ingredients -->

        <Button
            android:id="@+id/add_ingredient_field_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add ingredient" />

        <LinearLayout
            android:id="@+id/timeToPrepare_NumberOfServings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recipe_servings"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/recipeServings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/recipe_number_of_servings"
                    android:inputType="text"
                    android:maxLength="2"
                    android:textAppearance="@style/RecipeSummaryFont" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/time_to_prepare"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/recipeCookingTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/minutes"
                    android:inputType="text"
                    android:maxLength="4"
                    android:textAppearance="@style/RecipeSummaryFont" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/how_to_prepare"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/recipeHowToPrepare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/describe_how_to_prepare"
            android:inputType="textMultiLine"
            android:textAppearance="@style/RecipeSummaryFont" />


        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/camera_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Take with camera" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submit_recipe"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit" />

            <Button
                android:id="@+id/cancel_recipe"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
