<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whatrecipes.whatrecipes.view.AI.ActivityImageClassifier">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorGhostWhite"/>

            <TextView
                android:id="@+id/result1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                tools:text="dog: 0.343535" />

            <TextView
                android:id="@+id/result3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                tools:text="cat: 0.21423423" />

            <TextView
                android:id="@+id/result2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                tools:text="chair: 0.23423423" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/material_drawer_width"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:text="Give us a pricture and we will give you the recipe for it!"/>

            <Button
                android:textAlignment="center"
                android:id="@+id/take_gallery_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET IMAGE FROM GALLERY"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />
            <Button
                android:textAlignment="center"
                android:id="@+id/take_camera_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET IMAGE FROM CAMERA"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/recipe_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THE RECIPE"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
