<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header_info">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="RecipeTitleFont" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGhostWhite</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="RecipeTitleFontLand" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGhostWhite</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="RecipeCookingTimeFont" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGhostWhite</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="RecipeCookingTimeFontLand" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGhostWhite</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">36sp</item>
    </style>


    <style name="RecipeHugeFont" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20pt</item>
    </style>

    <style name="RecipeSummaryFont" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGhostWhite</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RecipeSummaryFontLand" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGhostWhite</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="RecipeSummaryFontDark" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RecipeIngredientFontDark" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
